<h1>influence discovery</h1>

<%= form_tag '/people', :method => :get do %>
	<%= label_tag 'person_uri', 'Person URI' %>
	<%= text_field_tag 'person_uri', nil, :size => 75, :value => params[:person_uri] %>
	<%= submit_tag 'Get People They Influenced' %>
<% end %>
<i>e.g. "http://dbpedia.org/resource/Heraclitus"</i>

<hr/>

<% if !params[:person_uri].nil? %>
	<h2><%= link_to params[:person_uri], params[:person_uri] %> influenced:</h2>

	<ul>
	<% @influenced.each do |i| %>
		<li><%= link_to i, i %></li>
	<% end %>
	</ul>

	<br/>

	<h2><%= link_to params[:person_uri], params[:person_uri] %> was influenced by:</h2>

	<ul>
	<% @influencers.each do |i| %>
		<li><%= link_to i, i %></li>
	<% end %>
	</ul>
<% end %>